    <style name="BottomNavigationView">
        <item name="android:background">@android:color/white</item>
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">@dimen/bottom_nav_icon_size</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.ActiveText
        </item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.InactiveText
        </item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <style name="TextAppearance.BottomNavigationView.ActiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/accent_primary</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.InactiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="tabIndicatorColor">@color/accent_primary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text_primary</item>
        <item name="tabTextColor">@color/text_inactive</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PosterCornersSize">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>

    <style name="RoundPoster">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Corner12Size">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertMessageStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStylePositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyleNegative</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
    </style>

    <style name="AlertDialogTitleStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/AlertTitleStyle</item>
    </style>

    <style name="AlertTitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="AlertMessageStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_inactive</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AlertButtonStylePositive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/error_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AlertButtonStyleNegative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/text_inactive</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>